<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{%  block title %} ENISortie {% endblock %}</title>
    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("build/css/app.css") }}" >
    {% endblock %}
</head>
<body>
    <div class="container">
        <header>
            {% block header %}
                {% include("inc/nav.html.twig") %}
            {% endblock %}
        </header>
        <main>
            <div id="msg">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}">
                            {{ message }}
                        </div>
                        {%  endfor %}
                {% endfor %}
            </div>
            {% block main %}

            {%  endblock %}
        </main>
        <footer>
            {% block footer %}
            <div class="page-footer black">
                <div class="page-copyright text-center py-5">
                    &copy; {{ "now"|date("Y") }} ENISortie
                </div>
            </div>

            {% endblock %}
        </footer>
            {% block javascripts %}
                <script src="{{ asset('build/app.js') }}"></script>
            {% endblock %}

    </div>
</body>
</html>