
{% extends 'layout.html.twig' %}


{%  block main %}

Profil utilisateur
    <div class="card">
        {% if not other %}
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link {% if not editProfil and not editPassword %}active{% endif %}" href="{{ path('profil') }}">Profil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if editProfil %}active{% endif %}" href="{{ path('profilEdit') }}">Edition</a>
                </li>
            </ul>
        </div>
        {% endif %}
        <div class="card-body row justify-content-center">
            <div class="col-auto text-center">
                {% if participant.photo is not null %}
                    <img src="{{ asset('files/' ~ participant.photo) }}" alt="{{ participant.username }}">
                {% else %}
                    Pas de photo
                {% endif %}
                <h1 class="d-block">{{ participant.nom }} {{ participant.prenom }}</h1>
                <p class="title d-block">({{ participant.pseudo }})</p>
                {% if participant.mail is not null %}
                    <a href="#" class="d-block"><i class="fas fa-at"></i> {{ participant.mail }}</a>
                {% endif %}
                {% if participant.telephone is not null %}
                    <a href="#" class="d-block"><i class="fas fa-phone"></i> {{ participant.telephone }}</a>
                {% endif %}
            </div>
            <div class="col-auto w-100">

                {% if editProfil %}
                    {% if not other %}
                        {% if form is not null %}
                            {{ form(form) }}
                        {% endif %}
                    {% endif %}
                {% else %}
                    <h1><i class="fas fa-university"></i> Campus</h1>
                    <div class="list-group">
                        {% if participant.campus is not null %}
                            <a class="list-group-item list-group-item-action" href="#">{{ participant.campus.nom }}</a>
                        {% endif %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>


{% endblock %}
