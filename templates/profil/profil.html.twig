
{% extends 'layout.html.twig' %}


{%  block main %}

Profil utilisateur
    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link {% if not editProfil and not editPassword %}active{% endif %}" href="{{ path('profil') }}">Profil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if editProfil %}active{% endif %}" href="{{ path('profilEdit') }}">Edition</a>
                </li>
            </ul>
        </div>
        <div class="card-body row justify-content-center">
            <div class="col-auto text-center">
                <h1 class="d-block">{{ app.user.nom }} {{ app.user.prenom }}</h1>
                <p class="title d-block">({{ app.user.pseudo }})</p>
                {% if app.user.mail is not null %}
                    <a href="#" class="d-block"><i class="fas fa-at"></i> {{ app.user.mail }}</a>
                {% endif %}
                {% if app.user.telephone is not null %}
                    <a href="#" class="d-block"><i class="fas fa-phone"></i> {{ app.user.telephone }}</a>
                {% endif %}
            </div>
            <div class="col-auto w-100">
                {% if editProfil %}
                    {% if form is not null %}
                        {{ form(form) }}
                    {% endif %}
                {% else %}
                    <h1><i class="fas fa-university"></i> Campus</h1>
                    <div class="list-group">
                        {% if app.user.campus is not null %}
                            <a class="list-group-item list-group-item-action" href="#">{{ app.user.campus.nom }}</a>
                        {% endif %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>


{% endblock %}
